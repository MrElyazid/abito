<%# Welcome Banner - Enhanced %>
<div class="p-5 mb-4 bg-dark text-white rounded-3"> <%# Changed background, added text-white %>
  <div class="container-fluid py-5">
    <h1 class="display-5 fw-bold">Welcome to Abito!</h1>
    <p class="col-md-8 fs-4">Your one-stop shop for the best products online. Browse our categories or check out our featured items below.</p>
    <%= link_to "Browse All Products", products_path, class: "btn btn-outline-light btn-lg" %> <%# Changed button style %>
  </div>
</div>

<%# Shop By Category Section %>
<% if @categories_for_home.any? %>
<div class="container my-5"> <%# Add vertical margin %>
  <h2 class="display-6 mb-3 text-center">Shop by Category</h2>
  <div class="row justify-content-center">
    <% @categories_for_home.each do |category| %>
      <div class="col-md-3 col-sm-6 mb-4">
        <div class="card text-center h-100"> <%# Apply card styles from CSS %>
          <div class="card-body d-flex flex-column justify-content-center">
            <%# Placeholder for category image/icon if added later %>
            <i class="bi bi-tag fs-1 mb-2"></i> <%# Example using Bootstrap Icons %>
            <h5 class="card-title"><%= link_to category.name, category_path(category), class: "stretched-link text-decoration-none" %></h5>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
<% end %>
<%# Featured Products Section %>
<div class="container">
  <h2 class="display-6 mb-3">Featured Products</h2> <%# Added display class and margin %>
  <%# Removed <hr> for cleaner look, spacing handled by mb-3 %>
  <% if @featured_products.any? %>
    <div class="row">
      <% @featured_products.each do |product| %>
        <%= render 'products/product_card', product: product %>
      <% end %>
    </div>
  <% else %>
    <p>No featured products available at the moment.</p>
  <% end %>
</div>
