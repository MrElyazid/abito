<div class="container mt-4">
  <h1>Your Order History</h1>

  <% if @orders.any? %>
    <table class="table table-striped table-hover">
      <thead class="table-light"> <%# Using light theme for user facing %>
        <tr>
          <th>Order ID</th>
          <th>Placed At</th>
          <th>Status</th>
          <th>Total Price</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @orders.each do |order| %>
          <tr>
            <td>#<%= order.id %></td>
            <td><%= order.created_at.strftime('%Y-%m-%d %H:%M') %></td>
            <td><%= order.status&.titleize || 'N/A' %></td>
            <td><%= number_to_currency(order.total_price) %></td>
            <td>
              <%= link_to 'View Details', order_path(order), class: 'btn btn-sm btn-info' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <p>You haven't placed any orders yet.</p>
    <%= link_to "Start Shopping", products_path, class: "btn btn-primary" %>
  <% end %>
</div>
